$directoryPath = "C:\QVDFiles"
$files = Get-ChildItem $directoryPath -Filter *.qvd -Recurse

foreach ($file in $files) {
    $content = Get-Content $file.FullName
    $xmlString = $content.Substring(0, $content.IndexOf("</QvdTableHeader>") + "</QvdTableHeader>".Length)
    $xml = [xml]$xmlString
    $xml.QVDTableHeader.Lineage | ForEach-Object { $_.ParentNode.RemoveChild($_) }
    $noOfRecordsElement = $xml.QVDTableHeader.QVDTableMetaData.NoOfRecords
    if ($noOfRecordsElement) {
        $propertyValue = $noOfRecordsElement.InnerText
        Write-Output "File $($file.Name) has NoOfRecords value of $propertyValue"
    } else {
        Write-Output "File $($file.Name) does not have a NoOfRecords property."
    }
}
