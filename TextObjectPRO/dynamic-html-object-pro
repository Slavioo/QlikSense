define(['jquery', 'qlik'], function($, qlik) {
    return {
        initialProperties: {
            version: 1.0,
            html: ''
        },
        definition: {
            type: 'items',
            component: 'accordion',
            items: {
                settings: {
                    uses: 'settings',
                    items: {
                        html: {
                            type: 'string',
                            ref: 'html',
                            label: 'HTML',
                            expression: 'optional'
                        }
                    }
                }
            }
        },
        paint: function($element, layout) {
            var html = layout.html;

            // Evaluate Qlik expression on the server
            qlik.currApp().evaluateEx(html, function(reply) {
                var evaluatedHtml = reply.qResult.qReturn; // Assuming qReturn contains the evaluated result

                // Update the DOM with the evaluated HTML
                $element.html(evaluatedHtml);
            });
        }
    };
});
