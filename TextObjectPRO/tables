    <script>
        // JavaScript to add 'highlight' class to rows where the second column differs from the third
        document.querySelectorAll('tbody tr').forEach(row => {
            const cells = row.querySelectorAll('td');
            if (cells[1] && cells[2] && cells[1].innerText !== cells[2].innerText) {
                row.classList.add('highlight');
            }
        });
    </script>
