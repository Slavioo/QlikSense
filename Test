$qvdFilePath = "C:\path\to\file.qvd"

$qvdReader = [System.IO.BinaryReader]::new([System.IO.File]::OpenRead($qvdFilePath))

$headerSize = $qvdReader.ReadInt32()
$headerBytes = $qvdReader.ReadBytes($headerSize)
$headerText = [System.Text.Encoding]::ASCII.GetString($headerBytes)
$headerTextClean = $headerText -replace ".*?<QvdTableHeader>", "<QvdTableHeader>"
$headerTextClean = $headerTextClean -replace "</QvdTableHeader>.*", "</QvdTableHeader>"

$qvdReader.Close()

[xml]$headerXml = $headerTextClean

if ($headerXml.QvdTableHeader.NoOfRecords) {
    $noOfRecords = $headerXml.QvdTableHeader.NoOfRecords
    Write-Output "Number of Records: $noOfRecords"
} else {
    Write-Output "No header found in the QVD file."
}
