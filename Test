$files = Get-ChildItem -Path "C:\myfolder" -Recurse -Include "*.qvd" | Where-Object { $_.Length -gt 0 }
foreach ($file in $files) {
    $headerText = qlik-cli.exe qvd header --file $file.FullName
    $xml = [xml]$headerText
    $noOfRecords = $xml.QvdTableHeader.NoOfRecords
    if ($noOfRecords -eq 0) {
        Remove-Item $file.FullName
    }
}
